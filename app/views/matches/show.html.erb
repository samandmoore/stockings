<%= render @match %>

<% if @match.started? %>
    <%= render partial: 'standings' %>
<% else %>
    <ul>
        <%= render partial: 'entries/simple_entry', collection: @match.entries, as: :entry %>
    </ul>
<% end %>

<% unless @match.started? || current_user.matches.include?(@match) %>
    <%= link_to 'Join!', match_entries_path(@match), method: :post %>
<% end %>
