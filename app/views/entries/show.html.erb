        <%= render partial: 'entry_ticker', locals: {ticker_slot: 'telecommunications'} %>
        <%= render partial: 'entry_ticker', locals: {ticker_slot: 'energy'} %>
        <%= render partial: 'entry_ticker', locals: {ticker_slot: 'healthcare'} %>
        <%= render partial: 'entry_ticker', locals: {ticker_slot: 'flex_1'} %>
        <%= render partial: 'entry_ticker', locals: {ticker_slot: 'flex_2'} %>
